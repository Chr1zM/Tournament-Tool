<Page x:Class="Tournament_Tool.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_Tool"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="700"
      Title="MenuPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Tournament-Tool" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="28"></TextBlock>
        <Button Grid.Row="1" Content="Turnier-Modus" Width="180" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Click="EditParticipantsButton_Click" Style="{StaticResource MaterialDesignRaisedDarkButton}"/>
        <Button Grid.Row="2" Content="Teilnehmer verwalten" Width="180" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Click="EditParticipantsButton_Click" Style="{StaticResource MaterialDesignRaisedDarkButton}"/>
        <Button Grid.Row="3" Content="Test" Width="180" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Click="EditParticipantsButton_Click" Style="{StaticResource MaterialDesignRaisedDarkButton}"/>
    </Grid>
</Page>
