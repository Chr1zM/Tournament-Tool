<Page x:Class="Tournament_Tool.Tournaments.TournamentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tournament_Tool.Tournaments"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TournamentPage"
      Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- TODO mit Datenbank daten befüllen -->
        <ComboBox Grid.Row="0" Grid.Column="0" Margin="10" Style="{StaticResource MaterialDesignComboBox}">
            <ComboBoxItem Content="FC Bayern München"></ComboBoxItem>
            <ComboBoxItem Content="BVB"></ComboBoxItem>
            <ComboBoxItem Content="Real Madrid"></ComboBoxItem>
            <ComboBoxItem Content="FC Barcelona"></ComboBoxItem>
        </ComboBox>
        <ComboBox Grid.Row="2" Grid.Column="0" Margin="10" Style="{StaticResource MaterialDesignComboBox}">
            <ComboBoxItem Content="FC Bayern München"></ComboBoxItem>
            <ComboBoxItem Content="BVB"></ComboBoxItem>
            <ComboBoxItem Content="Real Madrid"></ComboBoxItem>
            <ComboBoxItem Content="FC Barcelona"></ComboBoxItem>
        </ComboBox>

        <ComboBox Grid.Row="1" Grid.Column="1" Margin="10" Style="{StaticResource MaterialDesignComboBox}">
            <ComboBoxItem Content="FC Bayern München"></ComboBoxItem>
            <ComboBoxItem Content="BVB"></ComboBoxItem>
            <ComboBoxItem Content="Real Madrid"></ComboBoxItem>
            <ComboBoxItem Content="FC Barcelona"></ComboBoxItem>
        </ComboBox>

        <Border Grid.Row="1" Grid.Column="2" BorderBrush="Green" BorderThickness="2">
            <ComboBox Margin="10" Style="{StaticResource MaterialDesignComboBox}">
                <ComboBoxItem Content="FC Bayern München"></ComboBoxItem>
                <ComboBoxItem Content="BVB"></ComboBoxItem>
                <ComboBoxItem Content="Real Madrid"></ComboBoxItem>
                <ComboBoxItem Content="FC Barcelona"></ComboBoxItem>
            </ComboBox>
        </Border>

        <ComboBox Grid.Row="1" Grid.Column="3" Margin="10" Style="{StaticResource MaterialDesignComboBox}">
            <ComboBoxItem Content="FC Bayern München"></ComboBoxItem>
            <ComboBoxItem Content="BVB"></ComboBoxItem>
            <ComboBoxItem Content="Real Madrid"></ComboBoxItem>
            <ComboBoxItem Content="FC Barcelona"></ComboBoxItem>
        </ComboBox>

        <ComboBox Grid.Row="0" Grid.Column="4" Margin="10" Style="{StaticResource MaterialDesignComboBox}">
            <ComboBoxItem Content="FC Bayern München"></ComboBoxItem>
            <ComboBoxItem Content="BVB"></ComboBoxItem>
            <ComboBoxItem Content="Real Madrid"></ComboBoxItem>
            <ComboBoxItem Content="FC Barcelona"></ComboBoxItem>
        </ComboBox>
        <ComboBox Grid.Row="2" Grid.Column="4" Margin="10" Style="{StaticResource MaterialDesignComboBox}">
            <ComboBoxItem Content="FC Bayern München"></ComboBoxItem>
            <ComboBoxItem Content="BVB"></ComboBoxItem>
            <ComboBoxItem Content="Real Madrid"></ComboBoxItem>
            <ComboBoxItem Content="FC Barcelona"></ComboBoxItem>
        </ComboBox>
    </Grid>
</Page>
